<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wx.zxingdemo.activity.ScanActivity">

        <cn.bingoogolapple.qrcode.zxing.ZXingView
            android:id="@+id/zxing_view"
            app:qrcv_cornerColor="@color/colorPrimaryDark"
            app:qrcv_maskColor="#33FFFFFF"
            app:qrcv_scanLineSize="0.5dp"
            app:qrcv_customScanLineDrawable="@mipmap/scan_icon_scanline"
            app:qrcv_scanLineColor="@color/colorAccent"
            app:qrcv_borderColor="#33ffff"
            app:qrcv_isShowTipBackground="true"
            app:qrcv_tipBackgroundColor="#6fff"
            app:qrcv_tipTextColor="#f00000"
            app:qrcv_tipTextMargin="20dp"
            app:qrcv_tipTextSize="18sp"
            app:qrcv_qrCodeTipText="扫描登入"
            app:qrcv_toolbarHeight="56dp"
            app:qrcv_topOffset="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_open_light"
                android:text="打开闪光灯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_close_light"
                android:text="打开闪光灯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
</layout>
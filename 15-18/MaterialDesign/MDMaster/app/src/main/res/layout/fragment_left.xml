<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:background="@mipmap/icon_header"
            android:orientation="vertical">

            <com.wx.md.view.CircleImageView
                android:id="@+id/circle_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_android"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                style="@style/BaseText"
                android:layout_marginTop="10dp"
                android:text="天涯旋"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!--可以用RecyclerView这里随便了-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_chicken_1" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小鸡"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_fox_2" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小狐"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_crab_3" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小虾"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_koala_4" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小考"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_zebra_5" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小斑"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/mike_white" />

                <LinearLayout
                    style="@style/LeftLinerLayout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_tiger_6" />

                    <TextView
                        style="@style/BaseText"
                        android:layout_marginLeft="40dp"
                        android:text="小虎"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wx.hencoder.practice18.view.LikesLayoutView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:likesNum="9998"
            app:isLikes="true"
            android:background="#f0f0f0"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/likesLayoutView" />

        <com.wx.hencoder.practice18.view.LikesLayoutView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:likesNum="9999"
            app:isLikes="false"
            app:textColor="#E45B41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/likesLayoutView" />

        <com.wx.hencoder.practice18.view.likes.LikesImageView
            android:id="@+id/like_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:background="#6666"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <com.wx.hencoder.practice18.view.likes.LikesTextView
            android:id="@+id/like_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"
            android:background="#6666"
            android:layout_width="100dp"
            android:layout_height="80dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>